<div>
<h3>create a new entry &#128395;</h3>
<br>
<br>
  <form action="/entries" method="post">
    <input type="hidden" name="journal_id" value=<%= @journal %>>
    <p>
    <label>Title:</label>
    <input type="text" name="title" required/>
    </p>
    <p>
    <label>Date:</label>
    <input type="date" name="date" required/>
    </p>
    <p>
    <label>Description:</label>
    </p>
    <p>
    <textarea name="description" required rows="25" cols="100"></textarea>
    </p>
    <input type="submit" value="  Create New Entry  ">
    <input type="reset">
  </form>
</div>
